<Window x:Class="ClaimManagement.ClaimDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Claim Details" Height="500" Width="600">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Claim Details" FontWeight="Bold" FontSize="18" Grid.Row="0" Margin="0,0,0,15"/>

        <StackPanel Grid.Row="1">
            <TextBlock Text="Claimant: John Doe" Margin="0,5"/>
            <TextBlock Text="Claim Month: September 2025" Margin="0,5"/>
            <TextBlock Text="Hours Worked: 40" Margin="0,5"/>
            <TextBlock Text="Status: Pending" Margin="0,5" FontWeight="SemiBold"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Approve" Width="120" Margin="0,0,10,0" Background="#4CAF50" Foreground="White" FontWeight="Bold" Click="ApproveButton_Click"/>
            <Button Content="Reject" Width="120" Background="#F44336" Foreground="White" FontWeight="Bold" Click="RejectButton_Click"/>
            <Button Content="Close" Width="120" Margin="10,0,0,0" Click="CloseButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
