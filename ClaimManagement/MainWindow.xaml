<Window x:Class="ClaimManagement.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClaimManagement"
        mc:Ignorable="d"
        Title="Claim Management System" Height="650" Width="900">

    <!-- TabControl layout pattern for multi-page WPF applications -->
    <!-- https://stackoverflow.com/questions/9827492/how-to-create-a-tabcontrol-in-wpf -->
    <!-- Various community contributors -->
    <!-- https://stackoverflow.com/users?tab=Users -->
    <Grid>
        <TabControl>
            <TabItem Header="Submit Claim">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Submit New Monthly Claim" FontWeight="Bold" FontSize="18" Grid.Row="0" Margin="0,0,0,15"/>

                    <StackPanel Grid.Row="1">
                        <Label Content="Claim Month:" FontWeight="SemiBold"/>
                        <DatePicker x:Name="ClaimMonthPicker" Margin="0,5,0,10"/>

                        <Label Content="Hours Worked:" FontWeight="SemiBold"/>
                        <TextBox x:Name="HoursWorkedTextBox" Margin="0,5,0,10"/>

                        <Label Content="Supporting Documents:" FontWeight="SemiBold"/>
                        <Button Content="Upload File" x:Name="UploadButton" Margin="0,5,0,10"/>

                        <ListBox Height="100" Margin="0,5,0,0" BorderBrush="LightGray"/>
                    </StackPanel>

                    <!-- Button styling with colors and horizontal alignment pattern -->
                    <!-- https://stackoverflow.com/questions/7222149/how-to-set-background-color-of-wpf-button-in-c-sharp-code -->
                    <!-- Various community contributors -->
                    <!-- https://stackoverflow.com/users?tab=Users -->
                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                        <Button Content="Submit" Width="120" Margin="0,0,10,0" Background="#4CAF50" Foreground="White" FontWeight="Bold"/>
                        <Button Content="Clear Form" Width="120" Background="#F44336" Foreground="White" FontWeight="Bold"/>
                    </StackPanel>
                </Grid>
            </TabItem>

            <TabItem Header="View Claims">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Your Submitted Claims" FontWeight="Bold" FontSize="18" Grid.Row="0" Margin="0,0,0,15"/>

                    <!-- DataGrid with manual column definition pattern -->
                    <!-- https://stackoverflow.com/questions/5466284/wpf-datagrid-how-to-bind-columns -->
                    <!-- Various community contributors -->
                    <!-- https://stackoverflow.com/users?tab=Users -->
                    <DataGrid Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Claim Month" Width="*"/>
                            <DataGridTextColumn Header="Hours Worked" Width="*"/>
                            <DataGridTextColumn Header="Submission Date" Width="*"/>
                            <DataGridTextColumn Header="Status" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <TabItem Header="Approve Claims">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Claims to Approve" FontWeight="Bold" FontSize="18" Grid.Row="0" Margin="0,0,0,15"/>

                    <!-- DataGrid with button column pattern for actions -->
                    <!-- https://stackoverflow.com/questions/9670440/how-to-add-a-button-to-a-datagrid-column -->
                    <!-- Various community contributors -->
                    <!-- https://stackoverflow.com/users?tab=Users -->
                    <DataGrid Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True" x:Name="ClaimsDataGrid">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Claimant" Width="*"/>
                            <DataGridTextColumn Header="Claim Month" Width="*"/>
                            <DataGridTextColumn Header="Hours" Width="*"/>
                            <DataGridTextColumn Header="Status" Width="*"/>
                            <DataGridTemplateColumn Header="Action">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="View Details" Margin="5" Click="ViewDetails_Click"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>