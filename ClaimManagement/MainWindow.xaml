<Window x:Class="ClaimManagement.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Claim Management System" Height="650" Width="900" Background="#F5F5F5">

    <Grid Margin="20">
        <TabControl x:Name="MainTabs">

            <!-- Submit Claim Tab -->
            <TabItem Header="Submit Claim">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Submit a New Claim" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>

                    <StackPanel Grid.Row="1">

                        <Label Content="Claim Month:" FontWeight="SemiBold"/>
                        <DatePicker x:Name="ClaimMonthPicker" Margin="0,5,0,10"/>

                        <Label Content="Hours Worked:" FontWeight="SemiBold"/>
                        <TextBox x:Name="HoursWorkedTextBox" Margin="0,5,0,10"/>

                        <Label Content="Hourly Rate:" FontWeight="SemiBold"/>
                        <TextBox x:Name="HourlyRateTextBox" Margin="0,5,0,10"/>

                        <Label Content="Additional Notes:" FontWeight="SemiBold"/>
                        <TextBox x:Name="NotesTextBox" Margin="0,5,0,10" Height="60" TextWrapping="Wrap" AcceptsReturn="True"/>

                        <Label Content="Supporting Documents:" FontWeight="SemiBold"/>
                        <Button x:Name="UploadButton" Content="Upload File" Click="UploadButton_Click"
                                Width="150" Margin="0,5,0,10" Background="#2196F3" Foreground="White" FontWeight="Bold"/>

                        <ListBox x:Name="UploadedFilesList" Height="100" Margin="0,5,0,10" BorderBrush="LightGray"/>

                        <StackPanel Orientation="Horizontal">
                            <Button Content="Submit" Width="120" Margin="0,0,10,0" Background="#4CAF50" 
                                    Foreground="White" FontWeight="Bold" Click="SubmitButton_Click"/>
                            <Button Content="Clear" Width="120" Background="#F44336" 
                                    Foreground="White" FontWeight="Bold" Click="ClearButton_Click"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </TabItem>

            <!-- Other Tabs (like CoordinatorView) go here -->

        </TabControl>
    </Grid>
</Window>
